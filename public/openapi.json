  "paths": {
    "/main": {
      "get": {
        "tags": [
          "general"
        ],
        "summary": "Получение информации для главной страницы",
        "description": "Отображение подборок и слайдеров на главной",
        "operationId": "getMain",
        "responses": {
          "200": {
            "description": "Успешный запрос"
          }
        }
      }
    },
    "/listFilter": {
      "get": {
        "tags": [
          "general"
        ],
        "summary": "Список фильтров",
        "responses": {
          "200": {
            "description": "Успешный запрос"
          }
        }
      }
    },
    "/get_token": {
      "post": {
        "tags": [
          "profile"
        ],
        "summary": "Авторизация и получение токена",
        "description": "Вход в аккаунт",
        "operationId": "getToken",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "login": {
                    "type": "string",
                    "example": "000000"
                  },
                  "password": {
                    "type": "string",
                    "example": "666666"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Успешная авторизация"
          },
          "490": {
            "description": "Указанный логин/email не существует"
          }
        }
      }
    },
    "/get_pass/{id}": {
      "get": {
        "tags": [
          "profile"
        ],
        "summary": "забыли пароль",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Успешно"
          },
          "490": {
            "description": "Отсутствует токен"
          }
        }
      }
    },
    "/getUserProfile": {
      "get": {
        "tags": [
          "profile"
        ],
        "summary": "получение данных пользователя",
        "security": [
          {
            "ApiKeyAuth": []
