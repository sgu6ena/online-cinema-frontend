    "/updatePassword": {
      "post": {
        "tags": [
          "profile"
        ],
        "summary": "сменить пароль",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "operationId": "updatePassword",
        "requestBody": {
          "description": "Вход с помощью  логина и пароля. В качестве логина может быть и email",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "passwordOld": {
                    "type": "string",
                    "example": "999999"
                  },
                  "password": {
                    "type": "string",
                    "example": "777777"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Успешно"
          }
        }
      }
    }
