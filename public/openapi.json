    "/file/category/{cid}/{limit}": {
      "get": {
        "tags": [
          "files"
        ],
        "summary": "для постраничного вывода - список filesов из категории",
        "parameters": [
          {
            "in": "path",
            "name": "cid",
            "schema": {
              "type": "integer"
            },
            "required": true
          },
          {
            "in": "path",
