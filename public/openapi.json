    "/sendSMS": {
      "post": {
        "tags": [
          "profile"
        ],
        "summary": "Запро отправить смс для подтверждения покупки подписки",
        "operationId": "sendSms",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phone": {
                    "type": "number",
                    "example": 77814920
                  },
                  "promo": {
                    "type": "boolean",
                    "example": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Успешно"
          }
        }
      }
    },
    "/checkSMS": {
      "post": {
        "tags": [
          "profile"
        ],
